<%= simple_form_for(@varsity_member) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :vm_id, :label => "ID" %>
  </div>

  <div class="form-inputs">
    <%= f.input :first_name %>
  </div>

  <div class="form-inputs">
    <%= f.input :last_name %>
  </div>

  <div class="form-inputs">
    <%= f.input :year, :collection => 1..5, :as => :select %>
  </div>

  <div class="form-inputs">
    <%= f.input :course %>
  </div>

  <div class="form-inputs">
    <%= f.input :contact_number %>
  </div>

  <div class="form-inputs">
    <%= f.input :email_address %>
  </div>

  <div class="form-inputs">
    <%= f.input :varsity_track, :as => :select, :collection => VarsityMember::TRACK, :include_blank => false %>
  </div>

  <div class="form-inputs">
    <%= f.input :debater_position, :as => :select, :collection => VarsityMember::POSITION, :include_blank => false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
