<%= simple_form_for(@debt_settlement) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :amount_paid %>
  </div>

  <div class="form-inputs">
    <%= f.label :date_paid, "Date Paid" %>
    <%= f.date_select :date_paid %>
  </div>

  <div class="form-inputs">
    <%= f.association :varsity_member %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
